{
  "name": "node-boilerplate",
  "version": "1.1.1",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "release": "standard-version",
    "clean:logs": "rm *.log",
    "build": "yarn clean && babel src -d dist",
    "clean": "rimraf dist",
    "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
    "start:dev": "cross-env NODE_ENV=development nodemon -r dotenv/config --exec babel-node src/index",
    "test": "jest -i",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage --forceExit || true",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:all": "prettier --write \"**/*.{js,json,md}\"",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-jest": "^26.6.1",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "pm2": "^4.5.0",
    "winston": "^3.3.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
